#!/bin/bash -eu

source "$(dirname "$0")/common.sh"

port="$(snapctl get config.http.port)"
host="$(snapctl get config.http.host)"

extra_args=()

verbose="$(snapctl get config.verbose)"
if [ "${verbose}" = "true" ]; then
  extra_args+=(--verbose)
fi

gpu_layers="$(snapctl get config.gpu-layers)"
if [[ -z "$gpu_layers" ]]; then
  echo "gpu-layers snap option is not set"
  exit 1
fi

exec "$server/usr/local/bin/llama-server" \
--model "$MODEL_FILE" \
--mmproj "$MMPROJ_FILE" \
--port "$port" \
--host "$host" \
--n-gpu-layers "$gpu_layers" \
"${extra_args[@]}" \
"$@"
